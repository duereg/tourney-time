{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018", "DOM", "ES2019"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/*"],
      "@bin/*": ["bin/*"],
      "@tests/*": ["test/*"]
    },
    "noEmitOnError": true
  },
  "include": ["src/**/*", "test/**/*", "bin/**/*"],
  "exclude": ["node_modules", "docs"]
}
